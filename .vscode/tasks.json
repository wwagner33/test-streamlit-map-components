// Executa o streamlit no arquivo atual
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Streamlit on current file",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "source .venv/bin/activate && streamlit run \"${file}\""
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
